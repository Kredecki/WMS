@model WMS.Pages.Account.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login[0].GroupId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login[0].Rankid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login[0].Modification)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Login) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rankid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modification)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
